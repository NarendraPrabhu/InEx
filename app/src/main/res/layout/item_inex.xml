<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:background="#FFFEFEFE"
    android:layout_margin="3dp"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:minHeight="50dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/inex_item_description"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|start|left"
        android:textSize="12sp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_below="@id/inex_item_description"
        android:id="@+id/inex_item_divider"
        android:layout_height="1dp"
        android:background="@color/lt_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/inex_item_divider"
        android:id="@+id/inex_item_amount"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/inex_item_date"
        android:layout_below="@id/inex_item_divider"
        android:gravity="start|left|center_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/inex_item_amount"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_delete"
        android:id="@+id/inex_item_delete"
        android:layout_height="wrap_content"/>

</RelativeLayout>